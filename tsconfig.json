{
    "compilerOptions": {
        "target": "ES2020",                                  
        "module": "commonjs",                                
        "rootDir": "./src",                                  
        "moduleResolution": "node",                       
        "sourceMap": true,                                
        "outDir": "./server",                               
        "esModuleInterop": true,                             
        "forceConsistentCasingInFileNames": true,            
        "strict": true,                                     
        "skipLibCheck": true,
        "declaration": true, 
        "emitDeclarationOnly": false
    },
    "include": ["src/**/*", "types/**/*"]
}